<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .w-10 {
            width: 10%;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-between mt-3">
            <a class="fw-bold text-decoration-none text-black me-3 size-26 h3" href="quanly">Quản lý bán hàng</a>
            <a class="fw-bold text-decoration-none text-black me-3" href="login">Đăng xuất</a>
        </div>
        <div class="row mt-5 w-100 ">
            <form class="w-100" method="POST" enctype="multipart/form-data" action="/myproduct">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-10" id="basic-addon3">ID sản phẩm</span>
                        <input type="text" class="form-control" id="id_product" name="idproduct" placeholder=""
                            disabled />
                    </div>
                </div>
                <div class="row d-flex justify-content-center mt-3">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-10" id="basic-addon3">Tên sản phẩm</span>
                        <input type="text" class="form-control" id="namepro" name="namepro" placeholder="" required />
                    </div>
                </div>
                <div class="row d-flex mt-3 justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-10" id="basic-addon3">Giá</span>
                        <input type="number" class="form-control" id="pricepro" name="pricepro" placeholder=""
                            required />
                    </div>
                </div>
                <div class="row mt-3 d-flex justify-content-center">
                    <div class="col-4 input-group mb-3 ">
                        <span class="input-group-text w-10" id="basic-addon3">Màu</span>
                        <input type="text" class="form-control" id="color" name="color" placeholder="" required />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-4 input-group mb-3">
                        <input type="file" id="img" name="addProduct" accept="image/*" class="form-control w-20"
                            required />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-3 "><button type="submit"
                            class="btn btn-primary text-light fw-bold w-25">Save</button>
                    </div>

                </div>
            </form>
            <div class="col-3 mt-2"><button onclick="clearForm()"
                    class="btn btn-secondary text-light fw-bold w-25">Clear</button></div>

            <form method="POST" enctype="multipart/form-data" action="/myproduct">
                <input type="text" class="form-control" placeholder="Nhập id sản phẩm muốn xóa" name="id" required />
                <button type="submit">Xóa</button>
            </form>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Hình ảnh</th>
                    <th>Màu</th>
                    <th>Id khách hàng</th>
                    <th>Tên khách hàng</th>
                </tr>
            </thead>
            <tbody>
                {{#each array_product}}
                <tr>
                    <td>{{id_pro}}</td>
                    <td>{{name_pro}}</td>
                    <td>{{price}}</td>
                    <td><img style="width: 50px; height: 50px;" src={{img}} alt=""></td>
                    <td>{{color}}</td>
                    <td>{{id_user}}</td>
                    <td>{{name}}</td>
                    <td><button onclick="sua({{id_pro}})">Sửa</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
    <script>
        function sua(id, name, price, color) {
            document.getElementById("id_product").disabled = false;
            document.getElementById("id_product").value = id;
        }
        function clearForm() {
            document.getElementById("id_product").value = '';
            document.getElementById("color").value = '';
            document.getElementById("namepro").value = '';
            document.getElementById("pricepro").value = '';
            document.getElementById("img").value = '';
            document.getElementById("id_product").disabled = true;
        }
    </script>
</body>

</html>